<Window x:Class="MPS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MPS"
        mc:Ignorable="d"
        Title="Система управления фотостудией" Height="500" Width="800">
    <Grid Margin="0,0,0,0">
        <TabControl HorizontalAlignment="Left" Height="400" Margin="0,0,0,0" VerticalAlignment="Top" Width="700">
            <TabItem Header="Продукты" Width="70">
                <Grid Background="#FFE5E5E5">
                    <DataGrid x:Name="SpisokProductov" Margin="0,32,0,0" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding Path=Id}" Header="Идентификатор" Width="100"/>
                            <DataGridTextColumn Binding="{Binding Path=Name}" Header="Название" Width="160"/>
                            <DataGridTextColumn Binding="{Binding Path=Number}" Header="Номер" Width="160"/>
                            <DataGridTextColumn Binding="{Binding Path=Cost}" Header="Стоимость" Width="160"/>
                            <DataGridTextColumn x:Name="TextCat"  Header="Категория" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button Content="Удалить" HorizontalAlignment="Left" Margin="10,7,0,0" VerticalAlignment="Top" Width="76"/>
                    <Button Content="Изменить" HorizontalAlignment="Left" Margin="104,7,0,0" VerticalAlignment="Top" Width="76"/>
                    <Button Content="Добавить" HorizontalAlignment="Left" Margin="200,7,0,0" VerticalAlignment="Top" Width="74"/>
                </Grid>
            </TabItem>
            <TabItem Header="TabItem" Width="70">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
