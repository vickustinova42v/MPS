<Window x:Class="MPS.CashierLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MPS"
        mc:Ignorable="d"
        Title="Вход" Height="400" Width="400" WindowStartupLocation="CenterScreen" >
    <Grid HorizontalAlignment="Center"  VerticalAlignment="Center">
        <Label Content="Логин" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Login" HorizontalAlignment="Center" Height="23" Margin="0,30,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="0,60,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="Password" HorizontalAlignment="Center" Height="23" Margin="0,86,0,31" Width="200"/>
        <Button Content="Войти" HorizontalAlignment="Center" Margin="0,120,0,0" VerticalAlignment="Top" Width="74" Click="CheckPassword"/>
    </Grid>
</Window>
