<Window x:Class="MPS.AdminLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MPS"
        mc:Ignorable="d"
        Title="Вход" Height="400" Width="400" WindowStartupLocation="CenterScreen" >
    <Grid HorizontalAlignment="Center"  VerticalAlignment="Center">
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="Password" HorizontalAlignment="Center" Height="23" Margin="0,0,0,0" Width="200"/>
        <Button Content="Войти" HorizontalAlignment="Center" Margin="0,70,0,0" VerticalAlignment="Top" Width="75" Click="CheckPassword"/>
    </Grid>
</Window>
